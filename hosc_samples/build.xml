<?xml version="1.0" ?>
<project name="HOSC Samples" default="samples" basedir=".">
	<property file="../hosc/build_hosc.properties" />
	<path id="cp">
		<pathelement location="${scala.home}/lib/scala-library.jar" />
		<pathelement location="../hosc/build/hosc_${hosc.version}.jar" />
	</path>

	<target name="samples">
		<java classname="hosc.SuperCompilerApp" classpathref="cp">
			<arg line="-i input/regExpCont.hl -e regTrueAltFalse -t input/regExpCont_.svg -p input/regExpCont_.hl" />
		</java>
	</target>

	<target name="clean" description="delete generated files">
		<delete>
			<fileset dir="." includes="**/*_.sl" />
			<fileset dir="." includes="**/*_.svg" />
		</delete>
	</target>
</project>