list $a :: Nil | Cons $a (list $a);

//app (rev x Nil) (rev y Nil) //!

app (rev (Cons x xs) zs) ys

where

rev = %xs { %ys{
  case xs of {
    Nil : ys;
    Cons x1 xs1 : rev xs1 (Cons x1 ys);
  }
}}

app = %xs {
  %ys {
    case xs of {
      Nil : ys;
      Cons z zs : Cons z (app zs ys);
    }
  }
}